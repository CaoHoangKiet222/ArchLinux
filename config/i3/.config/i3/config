# Light
set $brightness_up exec ~/.config/i3/changeBrightness/changebrightness.sh up
set $brightness_down exec ~/.config/i3/changeBrightness/changebrightness.sh down

bindsym XF86MonBrightnessUp exec light -A 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 1 # decrease screen brightness
bindsym $mod+Shift+plus $brightness_up 
bindsym $mod+Shift+minus $brightness_down

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
set $volume_up exec ~/.config/i3/changeVolumes/changevolume.sh up
set $volume_down exec ~/.config/i3/changeVolumes/changevolume.sh down
set $volume_mute exec ~/.config/i3/changeVolumes/changevolume.sh mute

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# bindsym $mod+plus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
# bindsym $mod+minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym $mod+plus $volume_up
bindsym $mod+minus $volume_down 
bindcode $mod+67  $volume_mute

