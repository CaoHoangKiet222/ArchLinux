* {
    background: #14141450;
    foreground: #a9b1d6;

    normal-black:   #32344a;
    normal-red:     #f7768e;
    normal-green:   #9ece6a;
    normal-yellow:  #e0af68;
    normal-blue:    #7aa2f7;
    normal-magenta: #ad8ee6;
    normal-cyan:    #449dab;
    normal-white:   #787c99;

     bright-black:   #444b6a;
     bright-red:     #ff7a93;
     bright-green:   #b9f27c;
     bright-yellow:  #ff9e64;
     bright-blue:    #7da6ff;
     bright-magenta: #bb9af7;
     bright-cyan:    #0db9d7;
     bright-white:   #acb0d0;
}

* {
  background-color: rgba(0,0,0,0);
  color: @foreground;
}

window {
  background-color: @background;
  border: 2;
  border-radius: 10;
  border-color: @bright-blue;
  padding: 10;
  width: 300;
  position: center;
}

mainbox {
   border:  0;
   padding: 0;
}

inputbar {
    children: [textbox-prompt-colon];
    spacing: 5;
    padding: 1;
    border: 0.1% 0.3% 0.1% 0.3%;
    border-radius: 12px;
    border-color: @bright-blue;
}

textbox-prompt-colon {
  str: "☣  𝑆𝑒𝑙𝑒𝑐𝑡 𝑇ℎ𝑒𝑚𝑒 ☠";
	/* text-color:	@default-border; */
  padding: 0.5% 0 0.5% 0;
  margin: 0% 0% 0.5% 1.5%;
  font: "Fira Code 20";
}

element-text {
  horizontal-align: 0.45;
  font: "Fira Code 13";
  color: #ffffff;
}

prompt {
   padding: 6;
}

entry {
  background-color: rgba(235, 219, 178, 0.8); /* foreground */
  color: @normal-black;
  padding: 5px;
  border: 1;
  border-radius: 5;
  border-color: @bright-blue;
}

ci {
    border: 5;
}

listview {
  fixed-height: 0;
  spacing: 0;
  scrollbar: false;
  padding: 10 0;
  lines: 5;
}

element {
  padding: 5;
  margin: 2;
  border: 2;
  border-radius: 5;
  border-color: @foreground; /* normal-green */
}

element.selected {
   background-color: @bright-magenta; /* normal-green */
}

