configuration {
    font:							"Fira Code Nerd Font 12";
    show-icons:                     true;
    display-drun: 					"ï€‚";
    drun-display-format:            "{icon} {name}";
    disable-history:                false;
    sidebar-mode: 					false;
}

* {
    background: #14141450;
    foreground: #a9b1d6;

    normal-black:   #32344a;
    normal-red:     #f7768e;
    normal-green:   #9ece6a;
    normal-yellow:  #e0af68;
    normal-blue:    #7aa2f7;
    normal-magenta: #ad8ee6;
    normal-cyan:    #449dab;
    normal-white:   #787c99;

    bright-black:   #444b6a;
    bright-red:     #ff7a93;
    bright-green:   #b9f27c;
    bright-yellow:  #ff9e64;
    bright-blue:    #7da6ff;
    bright-magenta: #bb9af7;
    bright-cyan:    #0db9d7;
    bright-white:   #acb0d0;
}

* {
  background-color: rgba(0,0,0,0);
  color: @foreground;
}

window {
  background-color: @background;
  border: 2;
  border-radius: 10;
  border-color: @bright-blue;
  padding: 10;
  width: 30%;
  location: east;
  y-offset: -23.2%;
  x-offset: -0.5%;
}

mainbox {
   border:  0;
   padding: 0;
}

inputbar {
  children:[ prompt, entry ];
  background-color:  @foreground;
  expand: false;
  border:	0.1%;
  border-radius: 5;
  padding: 3px;
}

element-text {
  font: "Fira Code 13";
  color: #ffffff;
}

prompt {
  enabled: true;
  margin: 0.4% 0.4% 0% 0.7%;
  background-color: @foreground;
	text-color: @normal-black;
	font:	"Fira Code 12";
}

entry {
  background-color: @foreground; /* foreground */
  text-color: @normal-black;
  padding: 5px 5px 5px 0;
  expand: true;
  horizontal-align: 0;
  placeholder: "Search";
  blink: true;
}

ci {
    border: 5;
}

listview {
  fixed-height: 0;
  spacing: 0;
  scrollbar: false;
  padding: 10 0;
  lines: 10;
}

element {
  padding: 5 5 5 10;
  margin: 2;
  border: 2;
  border-radius: 5;
  border-color: @foreground; /* normal-green */
}

element.selected {
   background-color: @bright-magenta; /* normal-green */
}

